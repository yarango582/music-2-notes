# Environment
ENV=development  # development|production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Database (SQLite - zero cost, no external server needed)
DATABASE_URL=sqlite+aiosqlite:///data/music2notes.db

# Storage
STORAGE_PATH=./storage

# Audio Processing
DEFAULT_MODEL_SIZE=tiny  # tiny|full (tiny: fast, full: precise but slow)
DEFAULT_CONFIDENCE_THRESHOLD=0.95  # CREPE model confidence (0.0-1.0)
DEFAULT_MIN_NOTE_DURATION=0.05  # Minimum note duration in seconds
MAX_AUDIO_FILE_SIZE=104857600  # 100MB in bytes
MAX_AUDIO_DURATION=600  # 10 minutes in seconds

# Webhooks
WEBHOOK_TIMEOUT=30  # seconds
WEBHOOK_MAX_RETRIES=5
WEBHOOK_SECRET_KEY=your-secret-key-change-this-in-production

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
CORS_ORIGINS=*  # Comma separated origins for production

# Logging
LOG_LEVEL=INFO  # DEBUG|INFO|WARNING|ERROR|CRITICAL
